    <header>
        <div class="container-fluid header-wrap">
            <div class="drawerbtn-cont">
                <i class="bi bi-list"></i>
            </div>
            <div class="logo-cont">
                <span><a asp-controller="Home" asp-action="Index">OmneFictio</a></span>
            </div>
            <div class="searchbar-cont">
                <div class="searchbar-wrap">
                    <i class="bi bi-search"></i>
                    <input type="text" placeholder="Search" class="searchbar">
                </div>
            </div>
            <div class="header_right_section">
                <div class="shortcuts-cont">
                    <i class="bi bi-search search-shortcut"></i>
                    <i class="bi bi-chat-dots chat-shortcut"></i>
                    <a asp-controller="Home" asp-action="Publish"><i class="bi bi-plus-circle"></i></a>
                    <i class="bi bi-bell notifications-shortcut"></i>
                </div>
                <div class="account-cont">
                    <div class="ppic-wrap">
                        @{
                            if (userId != "-1")
                            {
                                @Html.Raw("<img src='" + userPicture + "'/>")
                                ;
                            }
                            else
                            {
                                <i class="bi bi-person-square"></i>
                            }
                        }
                        <!--<img src="https://icon-library.com/images/no-user-image-icon/no-user-image-icon-0.jpg">-->
                    </div>
                    <div class="dropdown_icon-wrap">
                        <i class="bi bi-caret-down-fill"></i>
                    </div>
                    <div class="account-dropdown">
                        <ul>
                            @if (userId != "-1")
                            {
                                <li><a class="ad-username">@username</a></li>
                                <li><a href="#">Profile</a></li>
                                <li><a href="#">Library</a></li>
                                <li><a href="#">Friends</a></li>
                            }
                            else
                            {
                                <li><a class="login-openbtn">Login</a></li>
                                <li><a asp-controller="Home" asp-action="Register">Register</a></li>
                            }
                            <!--<li><a href="#">Profile</a></li>
                            <li><a href="#">Library</a></li>
                            <li><a href="#">Friends</a></li>-->
                            <li><a href="#">Shop</a></li>
                            <li><a href="#">Settings</a></li>
                        </ul>
                        @if (userId != "-1")
                        {
                            <a asp-controller="Auth" asp-action="LogOut" class="acc_dd_redbutton">Logout</a>
                        }
                        <!--<a href="#" class="acc_dd_redbutton">Logout</a>-->
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container main-cont">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://accounts.google.com/gsi/client" async defer></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!--RenderSection("Scripts", required: false)-->
</body>

</html>
