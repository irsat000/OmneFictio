    <div class="drawer">
        <div class="dw-top">
            <div class="dw-account">
                <div class="dw-userimg">
                    <i class="bi bi-person-square"></i>
                    <!--<img src="https://icon-library.com/images/no-user-image-icon/no-user-image-icon-0.jpg">-->
                </div>
                <!--<i class="bi bi-person-bounding-box dw-userimg"></i>-->
                <span class="dw-username">No User</span>
                <span class="dw-acc-info">--</span>
                <span class="dw-acc-info">---</span>
            </div>
            <div class="dw-close">
                <i class="bi bi-x-lg"></i>
            </div>
        </div>
        <div class="dw-mainpage">
            <a asp-controller="Home" asp-action="Index">OmneFictio</a>
        </div>
        <div class="dw-list">
            <ul>
                <li><a class="login-openbtn"><div class="dw-icon-cont"><i class="bi bi-person"></i></div>Login</a></li>
                <li><a asp-controller="Home" asp-action="Register"><div class="dw-icon-cont"><i class="bi bi-person-plus"></i></div>Register</a></li>
                <!--<li><a href="#"><div class="dw-icon-cont"><i class="bi bi-person"></i></div>Profile</a></li>
                <li><a href="#"><div class="dw-icon-cont"><i class="bi bi-journals"></i></div>Library</a></li>
                <li><a href="#"><div class="dw-icon-cont"><i class="bi bi-people"></i></div>Friends</a></li>
                <li><a href="#"><div class="dw-icon-cont"><i class="bi bi-cart"></i></div>Shop</a></li>-->
                <li><a href="#"><div class="dw-icon-cont"><i class="bi bi-gear-fill"></i></div>Settings</a></li>
            </ul>
        </div>
        <!--<a href="#" class="dw-settings"><div class="dw-icon-cont"><i class="bi bi-box-arrow-left"></i></div>Logout</a>-->
    </div>
    <header>
        <div class="container-fluid header-wrap">
            <div class="drawerbtn-cont">
                <i class="bi bi-list"></i>
            </div>
            <div class="logo-cont">
                <span><a asp-controller="Home" asp-action="Index">OmneFictio</a></span>
            </div>
            <div class="searchbar-cont">
                <div class="searchbar-wrap">
                    <i class="bi bi-search"></i>
                    <input type="text" placeholder="Search" class="searchbar">
                </div>
            </div>
            <div class="header_right_section">
                <div class="shortcuts-cont">
                    <i class="bi bi-search search-shortcut"></i>
                    <i class="bi bi-chat-dots chat-shortcut"></i>
                    <i class="bi bi-plus-circle"></i>
                    <i class="bi bi-bell notifications-shortcut"></i>
                </div>
                <div class="account-cont">
                    <div class="ppic-wrap">
                        <i class="bi bi-person-square"></i>
                        <!--<img src="https://icon-library.com/images/no-user-image-icon/no-user-image-icon-0.jpg">-->
                    </div>
                    <div class="dropdown_icon-wrap">
                        <i class="bi bi-caret-down-fill"></i>
                    </div>
                    <div class="account-dropdown">
                        <ul>
                            <li><a class="login-openbtn">Login</a></li>
                            <li><a asp-controller="Home" asp-action="Register">Register</a></li>
                            <!--<li><a href="#">Profile</a></li>
                            <li><a href="#">Library</a></li>
                            <li><a href="#">Friends</a></li>
                            <li><a href="#">Shop</a></li>-->
                            <li><a href="#">Settings</a></li>
                        </ul>
                        <!--<a href="#" class="acc_dd_settings">Logout</a>-->
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container main-cont">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://apis.google.com/js/platform.js?onload=googleRenderButton" async defer></script>
    @await RenderSectionAsync("Scripts", required: false)
