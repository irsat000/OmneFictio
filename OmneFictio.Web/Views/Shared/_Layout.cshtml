    <div class="drawer" id="drawer">
        <div class="dw-top">
            <div class="dw-account">
                <div class="dw-userimg">
                    @if (userPicture != "none" && userId != "-1")
                    {
                        @Html.Raw("<img src='" + userPicture + "'/>")
                        ;
                    }
                    else
                    {
                        <i class="bi bi-person-square"></i>
                    }
                </div>
            </div>
            <div class="dw-close">
                <i class="bi bi-x-lg"></i>
            </div>
        </div>
        <div class="dw-username">
            @if (userId != "-1")
            {
                <span>@username</span>
            }
            else
            {
                <span class="dw-username">--</span>
            }
        </div>
        <div class="dw-mainpage">
            <a asp-controller="Home" asp-action="Index">OmneFictio</a>
        </div>
        <div class="dw-list">
            <ul>
                @if (userId != "-1")
                {
                    <li><a href="#">
                            <div class="dw-icon-cont"><i class="bi bi-person"></i></div>Profile
                        </a></li>
                    <li><a href="#">
                            <div class="dw-icon-cont"><i class="bi bi-journals"></i></div>Library
                        </a></li>
                    <li><a href="#">
                            <div class="dw-icon-cont"><i class="bi bi-people"></i></div>Friends
                        </a></li>
                }
                else
                {
                    <li><a class="login-openbtn">
                            <div class="dw-icon-cont"><i class="bi bi-person"></i></div>Login
                        </a></li>
                    <li><a asp-controller="Home" asp-action="Register">
                            <div class="dw-icon-cont"><i class="bi bi-person-plus"></i></div>Register
                        </a></li>
                }
                <!--<li><a href="#"><div class="dw-icon-cont"><i class="bi bi-person"></i></div>Profile</a></li>
                <li><a href="#"><div class="dw-icon-cont"><i class="bi bi-journals"></i></div>Library</a></li>
                <li><a href="#"><div class="dw-icon-cont"><i class="bi bi-people"></i></div>Friends</a></li>-->
                <li><a href="#">
                        <div class="dw-icon-cont"><i class="bi bi-cart"></i></div>Shop
                    </a></li>
                <li><a href="#">
                        <div class="dw-icon-cont"><i class="bi bi-gear-fill"></i></div>Settings
                    </a></li>
            </ul>
        </div>
        @if (userId != "-1")
        {
            <a asp-controller="Auth" asp-action="Logout" class="dw-redbutton">
                <div class="dw-icon-cont"><i class="bi bi-box-arrow-left"></i></div>Logout
            </a>
        }
