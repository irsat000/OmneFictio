                <i class="bi bi-people"></i>
                <span>Community</span>
            </div>
            <div class="link_cont">
                <i class="bi bi-cart"></i>
                <span>Shop</span>
            </div>
            <a class="link_cont" href="/settings">
                <i class="bi bi-gear"></i>
                <span>Settings</span>
            </a>
            <div class="link_cont">
                <i class="bi bi-newspaper"></i>
                <span>News</span>
