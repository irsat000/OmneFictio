        <div class="community_links link_group">
            <div class="link_cont">
                <i class="bi bi-card-heading"></i>
                <span>Requests</span>
            </div>
            <div class="link_cont">
                <i class="bi bi-people"></i>
                <span>Community</span>
            </div>
        </div>
        @if (username != null)
        {
            <span class="about_you_header">About You</span>
            <div class="about_you_links link_group">
                <a class="link_cont" href="/u/@username">
