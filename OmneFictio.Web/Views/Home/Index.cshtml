                </a>
                <a class="link_cont" href="/u/@username/saved">
                    <i class="bi bi-archive"></i>
                    <span>Library</span>
                </a>
            }
            else {
                <a class="link_cont">
                    <i class="bi bi-person"></i>
                    <span>Profile</span>
                </a>
                <a class="link_cont">
                    <i class="bi bi-archive"></i>
                    <span>Library</span>
                </a>
            }
