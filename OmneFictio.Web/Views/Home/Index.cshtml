@{
    ViewData["Title"] = "Home";
    @section Stylesheets {
        <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    }
    @section Scripts {
        <script src="~/js/index.js" asp-append-version="true" ></script>
    }
}
@using OmneFictio.Web.Models
@model IndexViewmodel

<div><span>User ID and Username:</span>
@{
    if(Model.sessionUserId != null){
        <span>@Model.sessionUserId</span>
    }
    <span> --- </span>
    if(Model.sessionUsername != null){
        <span>@Model.sessionUsername</span>
    }
}
</div>

<div class="linkgroups">
    <div class="linkgroup_cont readingtime">
        <span>Reading Time</span>
        <div class="linkgroup">
            <a class="link_cont" asp-controller="Home" asp-action="Read" asp-route-type="story">
                <i class="bi bi-book-fill"></i>
                <span>Story</span>
            </a>
            <a class="link_cont" asp-controller="Home" asp-action="Read" asp-route-type="scenario">
                <i class="bi bi-book-half"></i>
                <span>Scenario</span>
            </a>
            <a class="link_cont" asp-controller="Home" asp-action="Read" asp-route-type="fanfiction">
                <i class="bi bi-book"></i>
                <span>Fanfiction</span>
            </a>
            <a class="link_cont" asp-controller="Home" asp-action="Read" asp-route-type="plot">
                <i class="bi bi-card-text"></i>
                <span>Plot</span>
            </a>
        </div>
    </div>
    <div class="linkgroup_cont aboutyou">
        <span>About You</span>
        <div class="linkgroup">
            <div class="link_cont">
                <i class="bi bi-journals"></i>
                <span>Library</span>
            </div>
            <div class="link_cont">
                <i class="bi bi-archive"></i>
                <span>My Stuff</span>
            </div>
            <div class="link_cont">
                <i class="bi bi-clock-history"></i>
                <span>History</span>
            </div>
        </div>
    </div>
    <div class="linkgroup_cont misclinks">
        <div class="linkgroup">
            <div class="link_cont">
                <i class="bi bi-cart"></i>
                <span>Shop</span>
            </div>
            <div class="link_cont">
                <i class="bi bi-sliders2"></i>
                <span>Customize</span>
            </div>
            <div class="link_cont">
                <i class="bi bi-gear"></i>
                <span>Settings</span>
            </div>
            <div class="link_cont">
                <i class="bi bi-people"></i>
                <span>Community</span>
            </div>
            <div class="link_cont">
                <i class="bi bi-newspaper"></i>
                <span>News</span>
            </div>
            <div class="link_cont">
                <i class="bi bi-mortarboard"></i>
                <span>Tutorials</span>
            </div>
        </div>
    </div>
</div>

