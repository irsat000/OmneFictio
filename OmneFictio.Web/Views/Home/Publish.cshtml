@{
    ViewData["Title"] = "Publish";
    @section Stylesheets {
        <link rel="stylesheet" href="~/css/publish.css" asp-append-version="true" />
    }
    @section Scripts {
        <script src="~/js/publish.js" asp-append-version="true" ></script>
    }
}

<div class="filter-tagdd" id="wf-addtagmodal">
    <div class="tagdd-header">
        <input type="text" class="tagdd-searchbar" id="wf-addtag-searchbar" placeholder="Search tag">
        <i class="bi bi-x-lg" id="wf-taggdd-close"></i>
    </div>
    <ul class="" id="wf-addtag-list" data-action="include">
        <li data-tagvalue="action">Action</li>
        <li data-tagvalue="comedy">Comedy</li>
        <li data-tagvalue="fantasy">Fantasy</li>
        <li data-tagvalue="romance">Romance</li>
        <li data-tagvalue="dram">Dram</li>
        <li data-tagvalue="horror">Horror</li>
        <li data-tagvalue="adventure">Adventure</li>
        <li data-tagvalue="science_fiction">Science fiction</li>
    </ul>
</div>
