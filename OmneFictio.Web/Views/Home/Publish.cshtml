</div>

<div class="createpost">
    <div class="swap_form">
        <div class="sf-swapformbtn sf-swaptowriting">
            <span id="sf-swapToWriting">Write</span>
            <div class="sf-icon d-block" id="sf-w_icon"></div>
        </div>
        <div class="sf-swapformbtn sf-swaptorequest">
            <span id="sf-swapToRequest">Request</span>
            <div class="sf-icon" id="sf-r_icon"></div>
        </div>
    </div>
    <form class="writing_form d-flex" id="writing_form">
        <div class="wf-post_body">
            <div class="wf-post_primary">
                <span>Title</span>
                <input class="wf-title" type="text" name="title" placeholder="Title">
                <span>Description</span>
                <textarea class="wf-description" name="description" placeholder="Description"></textarea>
            </div>
            <div class="wf-post_details">
                <div class="wf-language">
                    <span>Language:</span>
                    <select name="postlan">
                        <option value="0">Language</option>
                        <option value="1">English</option>
                        <option value="2">Turkish</option>
                        <option value="3">French</option>
                        <option value="4">German</option>
                        <option value="5">Japanese</option>
                    </select>
                </div>
                <div class="wf-type">
                    <span>Type:</span>
                    <select name="type">
                        <option value="0">Type</option>
                        <option value="story">Story</option>
                        <option value="scenario">Scenario</option>
                        <option value="fanfiction">Fanfiction</option>
                        <option value="plot">Plot</option>
                    </select>
                </div>
                <div class="wf-ratedas">
                    <span>Rated as:</span>
                    <select name="postratedas">
                        <option value="0">Rate</option>
                        <option value="1">Sexual I</option>
                        <option value="2">Sexual II</option>
                        <option value="3">Sexual III</option>
                        <option value="4">Violence I</option>
                        <option value="5">Violence II</option>
                        <option value="6">Violence III</option>
                        <option value="7">Mix I</option>
                        <option value="8">Mix II</option>
                        <option value="9">Mix III</option>
                    </select>
                </div>
                <div class="wf-addtag">
                    <button type="button" id="wf-addtagbtn">Add Tag <i class="bi bi-plus"></i></button>
                </div>
                <div class="wf-tags">
                    <!--<span data-wftag="action">Action<i class="bi bi-x-circle wf-removespanbtn"></i></span>-->
                </div>
                
                <div class="wf-addseries">
                    <button type="button" id="wf-addseriesbtn">Series <i class="bi bi-plus"></i></button>
                </div>
                <div class="wf-fanfic_series">
                    <!--<span data-wfseries="harry_potter">Harry Potter<i class="bi bi-x-circle wf-removespanbtn"></i></span>-->
                </div>
            </div>
        </div>
        <div class="wf-submit">
            <input type="submit" value="Save"></input>
        </div>
    </form>
    <form class="request_form" id="request_form">
        <div class="rf-post_primary">
            <span>Title</span>
            <input class="rf-title" type="text" name="title" placeholder="Title">
            <span>Description</span>
            <textarea class="rf-description" name="body" placeholder="Description"></textarea>
        </div>
        <div class="rf-submit">
            <input type="submit" value="Send"></input>
        </div>
    </form>
</div>

