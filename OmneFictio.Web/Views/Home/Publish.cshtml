        <li data-seriesval="Star Trek" data-id="2">Star Trek</li>
        <li data-seriesval="Thor" data-id="4">Thor</li>
        <li data-seriesval="X-Men" data-id="5">X-Men</li>
        <li data-seriesval="Supernatural" data-id="6">Supernatural</li>
        <li data-seriesval="Doctor Who" data-id="8">Doctor Who</li>
    </ul>
</div>

<div class="createpost">
    <div class="swap_form">
        <div class="sf-swapformbtn sf-swaptowriting" id="sf-swapToWriting">
            <span>Write</span>
            <div class="sf-icon dblock" id="sf-w_icon"></div>
        </div>
        <div class="sf-swapformbtn sf-swaptorequest" id="sf-swapToRequest">
            <span>Request</span>
            <div class="sf-icon" id="sf-r_icon"></div>
        </div>
    </div>
    <form class="writing_form dflex" id="writing_form">
        <div class="wf-post_body">
            <div class="wf-post_primary">
                <span>Title</span>
                <input class="wf-title" type="text" name="title" placeholder="Title">
                <span>Description</span>
                <textarea class="wf-description" name="postDescription" placeholder="Description"></textarea>
                <span>Cover image (optional)</span>
                <div class="coverupload_wrap">
                    <input type="file" id="uploadCoverImg">
                </div>
            </div>
            <div class="wf-post_details">
                <div class="wf-language">
                    <span>Language:</span>
                    <select name="languageId">
                        <option value="0">Language</option>
                        <option value="1">English</option>
                        <option value="2">Turkish</option>
                        <option value="3">French</option>
                        <option value="4">German</option>
                        <option value="5">Japanese</option>
                    </select>
                </div>
                <div class="wf-type">
                    <span>Type:</span>
                    <select name="postTypeId" id="wf-posttype">
                        <option value="0">Type</option>
                        <option value="1">Story</option>
                        <option value="2">Scenario</option>
                        <option value="3">Fanfiction</option>
                        <option value="4">Plot</option>
                    </select>
                </div>
                <div class="wf-ratedas">
                    <span>Rated as:</span>
                    <select name="ratedAsId">
                        <option value="0">Rated as</option>
                        <option value="1">E - Everyone</option>
                        <option value="2">T - 13+</option>
                        <option value="3">M - 15+</option>
                        <option value="4">A - 18+</option>
                    </select>
                </div>
                <div class="wf-addtag">
                    <button type="button" id="wf-addtagbtn">Add Tag <i class="bi bi-plus"></i></button>
                </div>
                <div class="wf-tags">
                    <!--<span data-wftag="action">Action<i class="bi bi-x-circle wf-removespanbtn"></i></span>-->
                </div>
                
                <div class="wf-addseries">
                    <button type="button" id="wf-addseriesbtn">Series <i class="bi bi-plus"></i></button>
                </div>
                <div class="wf-fanfic_series">
                    <!--<span data-wfseries="harry_potter">Harry Potter<i class="bi bi-x-circle wf-removespanbtn"></i></span>-->
                </div>
            </div>
        </div>
        <span class="wf-message"></span>
        <div class="wf-submit">
            <input type="submit" value="Save"></input>
        </div>
    </form>
    <form class="request_form" id="request_form">
        <div class="rf-post_primary">
            <span>Title</span>
            <input class="rf-title" type="text" name="title" placeholder="Title">
            <span>Description</span>
            <textarea class="rf-description" name="body" placeholder="Description"></textarea>
        </div>
        <span class="rf-message"></span>
        <div class="rf-submit">
            <input type="submit" value="Send"></input>
        </div>
    </form>
</div>

